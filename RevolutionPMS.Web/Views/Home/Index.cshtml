                },
                {
                    fill: false,
                    label: "Credit card (BGN)",
                    lineTension: 0.1,
                    borderColor: "rgba(100,100,100, 1.0)",
                    data: [1222, 88, 900, 632, 100]
                },
                {
                    fill: false,
                    label: "Cash (BGN)",
                    lineTension: 0.1,
                    borderColor: "rgba(200,200,200, 1.0)",
                    data: [100, 876.78, 960.54, 102, 303.78]
                }]
        },
        options: {
